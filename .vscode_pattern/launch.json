{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Scrapper",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/scraper",
            "env": {"PKG_NAME": "${relativeFileDirname}"}, 
            "args": [
                "creds",
                "--user",
                "user",
                "--password",
                "********",
                "--host",
                "splunk-rest.com",
                "--format",
                "tf",
                "--verbose",
                "true",
                "-s",
                "true",
                "-b",
                "kpi_base_search",
                "--mode",
                "terraform_gen"
                //"notable_event_aggregation_policy",
            ],
            "showLog": true,
        },
        {
            "name": "Debug Provider",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "env": {"PKG_NAME": "${relativeFileDirname}"}, 
            "args": [
                "--debug",
            ],
            "showLog": true,
        }
    ]
}